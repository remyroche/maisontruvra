<!--
 * FILENAME: website/js/admin/components/NotificationProvider.vue
 * DESCRIPTION: New component to display notifications from the store.
 * It should be placed at the root of the application.
-->
<template>
  <div class="fixed top-5 right-5 z-[100] w-full max-w-sm space-y-3">
    <transition-group name="list">
      <div v-for="notification in notificationStore.notifications" :key="notification.id"
           :class="notificationClass(notification.type)"
           class="p-4 rounded-lg shadow-lg text-white text-sm"
           role="alert">
        <p class="font-bold">{{ notification.title }}</p>
        <p>{{ notification.message }}</p>
      </div>
    </transition-group>
  </div>
</template>

<script setup>
import { useAdminNotificationStore } from '../../stores/adminNotifications';

const notificationStore = useAdminNotificationStore();

const notificationClass = (type) => {
  switch (type) {
    case 'success':
      return 'bg-green-500';
    case 'error':
      return 'bg-red-500';
    case 'info':
      return 'bg-blue-500';
    default:
      return 'bg-gray-800';
  }
};
</script>

<style scoped>
.list-move,
.list-enter-active,
.list-leave-active {
  transition: all 0.5s ease;
}
.list-enter-from,
.list-leave-to {
  opacity: 0;
  transform: translateX(30px);
}
.list-leave-active {
  position: absolute;
}
</style>
