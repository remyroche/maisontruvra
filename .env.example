# Flask Application
SECRET_KEY=your-very-secret-flask-key
JWT_SECRET_KEY=your-very-secret-jwt-key
FLASK_ENV=development # 'development' or 'production'
FLASK_APP=manage.py   # Entry point for Flask CLI
FLASK_DEBUG=1         # Set to 0 in production

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/maison_truvra

# Caching & Task Queue (Redis)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# URLs
FRONTEND_URL=http://localhost:5173
ADMIN_URL=http://localhost:5173/admin # Assuming admin is part of the same app
BASE_URL=http://localhost:5000

# Data Encryption
ENCRYPTION_KEY=your-fernet-encryption-key # Generate one with `python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"`

# Email (SMTP)
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-email-password
FROM_EMAIL=noreply@maisontruvra.com
ADMIN_EMAIL=admin@example.com

# Logging
LOG_DIR=logs
LOG_LEVEL=INFO